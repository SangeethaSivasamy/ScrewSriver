	public  void drawSquare(int length) {
		int height = length;
		System.out.println("SQUARE:");
		drawLine(length, height);
	}
	
	public void drawLine(int length,int height) {
		for(int i=0;i<length;i++) {
			System.out.print(".");
		}
		
